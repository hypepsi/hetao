// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique @default("admin")
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Feeding {
  id          String   @id @default(cuid())
  startTime   DateTime
  endTime     DateTime?
  amount      Int      // ml
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([createdAt])
  @@index([startTime])
}

model Excretion {
  id          String   @id @default(cuid())
  type        String   // "大便" or "小便"
  color       String?
  texture     String?
  note        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([createdAt])
  @@index([type, createdAt])
}

model WeightRecord {
  id          String   @id @default(cuid())
  kg          Float
  note        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([createdAt])
}

